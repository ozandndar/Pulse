{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist/main",
    "rootDir": "./main",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "electron"]
  },
  "include": ["main/**/*"],
  "exclude": ["node_modules", "renderer"]
}